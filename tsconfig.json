{
  "compilerOptions": {
    /* Language & emit */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",

    /* Strictness & safety */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,

    /* Alias configuration (single, universal alias) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* VS Code / Next plugin */
    "plugins": [{ "name": "next" }]
  },

  /* File globs */
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
