{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/services/booking/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/cron/update-exchange-rates/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-exchange-rates",
      "schedule": "0 6 * * *"
    }
  ]
}